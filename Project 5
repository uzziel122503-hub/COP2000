//Calculate the Area of three specific shapes

#include <iostream>
#include <String>
using namespace std;
float Circle();
float Rectangle();
float Triangle();

int main()
{
	//program code goes here
	int selection;
	

	//menu
	cout << "Geometry Calculator" << endl; 

	cout << "1. Calculate the area of a Circle" << endl;
	cout << "2. Calculate the area of a Rectangle" << endl;
	cout << "3. Calculate the area of a Triangle" << endl;
	cout << "4. Quit" << endl;

	cout << "_____________ " << endl;
	cout << "Make your selection" << endl;


	cin >> selection;

	//validate
	while (selection < 1 || selection > 4 || !cin)
	{
		cin.clear();
		fseek(stdin, 0, SEEK_END);

		cout << "Invalid Selection, please try again:";
		cin >> selection;
	}

	cout << "You have selected " << selection << endl;
	switch (selection)
	{
	case 1: Circle(); 
		break;
	case 2: Rectangle();
		break;
	case 3: Triangle();
		break;
			
	}

	//Formulas 
	//A=3.14159*r^2
	//A = w * l
	//A = (1 / 2) * b * h
	
	cout << "\nThank you for using the Geometry Calculator\n";

	system("pause");
	return 0;

}
//
//Functions
//
float Circle()
{
	float input; 
	cout << "Please input radius\n"; 
	cin >> input; 
	input *= input * 3.14159;
	cout << "The area of the circle is " << input << endl;
	return input;
	
}
float Rectangle()
{
	float input;
	float input2;
	cout << "Please input length\n";
	cin >> input;
	cout << "Please input width\n";
	cin >> input2;
	input *= input2;
	cout << "The area of the circle is " << input << endl;
	return input;

}
float Triangle()
{
	float input;
	float input2;
	cout << "Please input height\n";
	cin >> input;
	cout << "Please input base\n";
	cin >> input2;
	input *= input2 * 0.5;
	cout << "The area of the Triangle is " << input << endl;
	return input;
}
